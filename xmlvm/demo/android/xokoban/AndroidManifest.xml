<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="org.xmlvm.demo.xokoban" android:versionCode="7" android:versionName="1.8">

	<application android:icon="@drawable/icon" android:label="@string/app_name">
		<activity android:label="@string/app_name"
			android:screenOrientation="landscape" android:name=".activity.SplashActivity">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:label="@string/app_name"
			android:screenOrientation="landscape" android:name=".activity.XokobanActivity">
		</activity>
		<activity
		    android:screenOrientation="landscape" android:name=".activity.SettingsActivity">
		</activity>
	</application>
	<uses-sdk android:minSdkVersion="8" />
	<uses-permission android:name="android.permission.WAKE_LOCK"></uses-permission>
	<uses-feature android:name="android.hardware.touchscreen" android:required="false"/>
</manifest> 