<!-- 
An application can lock orientation in portrait mode by adding the XML-attribute
screenOrientation="landscape" to the XML-tag <application>.
 -->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="org.xmlvm.tutorial.android.helloworld.landscape"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="8" />

    <application android:icon="@drawable/icon" android:label="HelloWorld (landscape)">
        <activity android:name=".HelloWorldActivity"
                  android:label="HelloWorld (landscape)"
                  android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>
</manifest>